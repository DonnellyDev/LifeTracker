<h1>{{title}}</h1>
<form method="post">
    <fieldset>
        <label for="typeOfLiquid" class="col-2">Liquid Name :</label>
        <input name="typeOfLiquid" id="typeOfLiquid" required/>
    </fieldset>

    <fieldset>
        <label for="yourCurrentWeight" class="col-2">Current Body Weight :</label>
        <input name="yourCurrentWeight" id="yourCurrentWeight" />
    </fieldset>

    <fieldset>
        <label for="intakeAmount" class="col-2">Amount of Intake :</label>
        <input name="intakeAmount" id="intakeAmount" required/>
    </fieldset>

    <fieldset>
        <label for="date" class="col-2">Date :</label>
        <input name="date" id="date" required type="date"/>
    </fieldset>

    <fieldset>
        <label for="intakeTimeOfDay" class="col-2">Intake Time of Day :</label>
        <select id="intakeTimeOfDay" name="intakeTimeOfDay" required>
            <option value="MORNING">Morning</option>
            <option value="AFTERNOON">Afternoon</option>
            <option value="EVENING">Evening</option>
            <option value="NIGHT">Night</option>
        </select>
    </fieldset>

    <fieldset>
        <label for="intakeTime" class="col-2">Time of Intake :</label>
        <input name="intakeTime" id="intakeTime" required/>
    </fieldset>


    {{! A Button}}
    <button class="offset-3 btn-primary"> Add Entry </button>
</form>