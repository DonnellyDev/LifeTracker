<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>

<style>
    h1{text-align: center;}
</style>
<div>
    <h1>LOGIN</h1>
</div>

{{#if messages}}
    <div class="alert alert-danger">
        Invalid credentials
    </div>
{{else}}
    <div class="alert alert-info">
        Please enter your credentials
    </div>
{{/if}}

<section class="vh-100">

    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form method="post">

                    <fieldset class="form-group">
                        <label for="username" class="col-3 control-label">
                            Username:*
                        </label>
                        <input name="username" id="username" required />
                    </fieldset>
                    <fieldset class="form-group">
                        <label for="password" class="col-3   control-label">
                            Password:*
                        </label>
                        <input name="password" id="password" type="password" required />
                    </fieldset>
                    <fieldset class="form-group">
                        <button class="btn btn-info offset-3">
                            Login
                        </button>
                        <hr/>
                        Need an account?
                        <a href="/register" title="Register">
                            Register
                        </a>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>

    <footer>
        <div class="d-flex flex-column py-4 px-4 px-xl-5 bg-primary">
            <div class="text-white">
                <p style="text-align:center"> Copyright Â© 2022. All rights reserved.</p>
            </div>
        </div>
    </footer>
</section>
</body>
</html>



